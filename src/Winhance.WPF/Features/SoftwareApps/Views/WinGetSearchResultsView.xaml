<UserControl x:Class="Winhance.WPF.Features.SoftwareApps.Views.WinGetSearchResultsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Winhance.WPF.Features.SoftwareApps.Views"
             xmlns:viewModels="clr-namespace:Winhance.WPF.Features.SoftwareApps.ViewModels"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:controls="clr-namespace:Winhance.WPF.Features.Common.Controls"
             xmlns:behaviors="clr-namespace:Winhance.WPF.Features.Common.Behaviors"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=viewModels:WinGetSearchResultsViewModel}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- WinGet Search Results Header - Always Visible -->
        <Border Grid.Row="0"
                Background="{DynamicResource ContentSectionBorderBrush}"
                CornerRadius="5"
                Margin="0,5,0,5"
                Effect="{StaticResource ShadowEffect}"
                Cursor="Hand">
            <DockPanel VerticalAlignment="Center"
                       HorizontalAlignment="Stretch">
                <!-- Category Icon (Material Design) -->
                <materialDesign:PackIcon Kind="Magnify"
                                         Width="24"
                                         Height="24"
                                         Margin="15,0,10,0"
                                         Foreground="{DynamicResource PrimaryTextColor}"
                                         VerticalAlignment="Center"
                                         DockPanel.Dock="Left"/>

                <!-- Category Name -->
                <TextBlock Text="WinGet Search Results"
                           FontWeight="SemiBold"
                           FontSize="14"
                           Foreground="{DynamicResource PrimaryTextColor}"
                           Margin="0,10,0,10"
                           VerticalAlignment="Center"
                           DockPanel.Dock="Left"/>

                <!-- Arrow Indicator -->
                <materialDesign:PackIcon Kind="{Binding IsExpanded, Converter={StaticResource BoolToChevronConverter}, FallbackValue=ChevronDown}"
                                         Width="24"
                                         Height="24"
                                         HorizontalAlignment="Right"
                                         VerticalAlignment="Center"
                                         Foreground="{DynamicResource PrimaryTextColor}"
                                         Margin="0,0,10,0"
                                         DockPanel.Dock="Right"/>
                
                <!-- Status Text -->
                <TextBlock Text="{Binding StatusText}"
                           FontSize="12"
                           Foreground="{DynamicResource SubTextColor}"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"
                           DockPanel.Dock="Right"/>
            </DockPanel>
        </Border>

        <!-- Search Results Content -->
        <Border Grid.Row="1"
                Background="{DynamicResource ContentSectionBorderBrush}"
                CornerRadius="5"
                Margin="5,5,5,5"
                Effect="{StaticResource LightShadowEffect}"
                Visibility="{Binding IsExpanded, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- No header buttons needed as we use the main Install Selected Items button -->
                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <!-- Empty header area -->
                </Grid>
                
                <!-- Search Results List -->
                <ListView Grid.Row="1" 
                          x:Name="WinGetAppsListView"
                          ItemsSource="{Binding SearchResults}" 
                          Style="{DynamicResource ThemedListView}" 
                          ItemContainerStyle="{DynamicResource ThemedListViewItem}" 
                          Margin="0,0,0,0" 
                          HorizontalAlignment="Stretch" 
                          HorizontalContentAlignment="Stretch"
                          behaviors:GridViewColumnResizeBehavior.Enabled="True"
                          behaviors:GridViewColumnResizeBehavior.Stretch="True"
                          MaxHeight="300">

                    <ListView.View>
                        <GridView x:Name="WinGetAppsGridView" AllowsColumnReorder="False">

                            <!-- Select Column -->
                            <GridViewColumn Width="60">
                                <GridViewColumn.HeaderContainerStyle>
                                    <StaticResource ResourceKey="FirstColumnHeader"/>
                                </GridViewColumn.HeaderContainerStyle>
                                <GridViewColumn.Header>
                                    <CheckBox IsChecked="{Binding IsAllSelected}" 
                                              Style="{StaticResource CustomCheckBox}"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center"/>
                                </GridViewColumn.Header>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding IsSelected}" 
                                                  Style="{StaticResource CustomCheckBox}"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <!-- Name Column -->
                            <GridViewColumn Header="Name" Width="250">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Name}" 
                                                   TextTrimming="CharacterEllipsis"
                                                   Margin="5,0"
                                                   VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <!-- ID Column -->
                            <GridViewColumn Header="ID" Width="250">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Id}" 
                                                   TextTrimming="CharacterEllipsis"
                                                   Margin="5,0"
                                                   VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <!-- Version Column -->
                            <GridViewColumn Header="Version" Width="120">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Version}" 
                                                   TextTrimming="CharacterEllipsis"
                                                   Margin="5,0"
                                                   VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <!-- Source Column -->
                            <GridViewColumn Header="Source" Width="150">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Source}" 
                                                   TextTrimming="CharacterEllipsis"
                                                   Margin="5,0"
                                                   VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </Border>
    </Grid>
</UserControl>
