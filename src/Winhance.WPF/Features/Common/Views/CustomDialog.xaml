<Window x:Class="Winhance.WPF.Features.Common.Views.CustomDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:Winhance.WPF.Features.Common.Converters"
        xmlns:controls="clr-namespace:Winhance.WPF.Features.Common.Controls"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        x:Name="DialogWindow"
        Title="{Binding Title}"
        MinWidth="500"
        MaxWidth="800"
        SizeToContent="WidthAndHeight"
        MaxHeight="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="True">
    
    <Window.Resources>
        <converters:GreaterThanOneConverter x:Key="GreaterThanOneConverter"/>
    </Window.Resources>
    
    <Grid>
        <Grid.OpacityMask>
            <VisualBrush>
                <VisualBrush.Visual>
                    <Border Background="Black"
                            CornerRadius="10"
                            Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Grid}}"
                            Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Grid}}"/>
                </VisualBrush.Visual>
            </VisualBrush>
        </Grid.OpacityMask>

        <Border CornerRadius="10"
                BorderBrush="Transparent"
                Background="{DynamicResource WindowBackground}">
            <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

        <!-- Header with optional icon, Title, and Close Button -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <iconPacks:PackIconMaterial x:Name="TitleBarIcon"
                                       Grid.Column="0"
                                       Kind="Information"
                                       Width="16"
                                       Height="16"
                                       Margin="12,8,0,0"
                                       VerticalAlignment="Top"
                                       Foreground="{DynamicResource SecondaryTextColor}"
                                       Visibility="Collapsed"/>

            <TextBlock x:Name="HeaderText"
                      Grid.Column="1"
                      Style="{StaticResource DialogTextBlockStyle}"
                      FontWeight="Normal"
                      FontSize="14"
                      Foreground="{DynamicResource SecondaryTextColor}"
                      TextWrapping="Wrap"
                      VerticalAlignment="Center"
                      Margin="5,5,5,15"/>

            <Button x:Name="CloseButton"
                    Grid.Column="2"
                    Style="{StaticResource WindowCloseButton}"
                    Click="CloseButton_Click"
                    ToolTip="Close"
                    Width="32"
                    Height="32"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top">
                <iconPacks:PackIconMaterial Kind="Close"
                                         Width="12"
                                         Height="12"/>
            </Button>
        </Grid>
        
        <!-- Content Area with ScrollViewer for low resolution safety -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled"
                      Margin="0">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Simple Message Content with optional icon -->
                <Grid x:Name="SimpleContentPanel" Grid.Row="0" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <ContentControl x:Name="ContentIconContainer"
                                   Grid.Column="0"
                                   Width="48"
                                   Height="48"
                                   Margin="0,0,10,0"
                                   VerticalAlignment="Top"
                                   Visibility="Collapsed"/>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock x:Name="MessageContent"
                                  Style="{StaticResource DialogTextBlockStyle}"
                                  FontWeight="SemiBold"
                                  TextWrapping="Wrap"
                                  Margin="0,0,0,0"/>

                        <CheckBox x:Name="OptionCheckbox"
                                  Style="{StaticResource CustomCheckBox}"
                                  FontSize="14"
                                  Margin="0,0,0,0"
                                  Visibility="Collapsed">
                            <CheckBox.ContentTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" TextWrapping="Wrap"/>
                                </DataTemplate>
                            </CheckBox.ContentTemplate>
                        </CheckBox>
                    </StackPanel>
                </Grid>

                <!-- App List Content with ModernScrollViewer -->
                <Border x:Name="AppListBorder"
                        Grid.Row="1"
                        Style="{StaticResource DialogAppListBorderStyle}"
                        Visibility="Collapsed">
                    <ScrollViewer x:Name="ContentScrollViewer"
                                  Style="{StaticResource ModernScrollViewer}"
                                  MaxHeight="250"
                                  MinHeight="100">
                        <ItemsControl x:Name="AppListControl">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Vertical"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}"
                                             TextWrapping="Wrap"
                                             Style="{StaticResource DialogAppTextBlockStyle}"
                                             Margin="0,3,0,3"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
            </Grid>
        </ScrollViewer>
        
        <!-- Buttons -->
        <StackPanel x:Name="ButtonsPanel"
                    Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="20,0,20,20">
            <Button x:Name="PrimaryButton"
                    Style="{StaticResource DialogButtonStyle}"
                    Click="PrimaryButton_Click"
                    IsDefault="True"
                    Margin="0,0,10,0"/>
            
            <Button x:Name="SecondaryButton"
                    Style="{StaticResource DialogButtonStyle}"
                    Click="SecondaryButton_Click"
                    Margin="0,0,10,0"/>
            
            <Button x:Name="TertiaryButton"
                    Style="{StaticResource DialogButtonStyle}"
                    Click="TertiaryButton_Click"
                    IsCancel="True"
                    Visibility="Collapsed"
                    Margin="0,0,0,0"/>
        </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
