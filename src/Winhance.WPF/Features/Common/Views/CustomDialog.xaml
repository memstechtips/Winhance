<Window x:Class="Winhance.WPF.Features.Common.Views.CustomDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:Winhance.WPF.Features.Common.Converters"
        x:Name="DialogWindow"
        Title="{Binding Title}"
        Width="500"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="True"
        Topmost="True">
    
    <Window.Resources>
        <converters:GreaterThanOneConverter x:Key="GreaterThanOneConverter"/>
    </Window.Resources>
    
    <Border CornerRadius="10"
            BorderThickness="1"
            BorderBrush="{DynamicResource ButtonBorderBrush}"
            Background="{DynamicResource WindowBackground}"
            Effect="{StaticResource ShadowEffect}">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock x:Name="HeaderText"
                  Grid.Row="0"
                  Style="{StaticResource DialogTextBlockStyle}"
                  FontWeight="SemiBold"
                  FontSize="16"
                  TextWrapping="Wrap"
                  VerticalAlignment="Center"
                  Margin="0,0,0,10"/>

        <!-- Message Content -->
        <TextBlock x:Name="MessageContent"
                  Grid.Row="1"
                  Style="{StaticResource DialogTextBlockStyle}"
                  TextWrapping="Wrap"
                  Margin="0,10,0,10"/>

        <!-- Footer Text -->
        <TextBlock x:Name="FooterText"
                  Grid.Row="2"
                  Style="{StaticResource DialogFooterStyle}"
                  TextWrapping="Wrap"
                  Margin="0,10,0,15"/>

        <!-- Buttons -->
        <StackPanel x:Name="ButtonsPanel"
                    Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button x:Name="PrimaryButton"
                    Style="{StaticResource DialogButtonStyle}"
                    Click="PrimaryButton_Click"
                    IsDefault="True"
                    Margin="0,0,10,0"/>
            
            <Button x:Name="SecondaryButton"
                    Style="{StaticResource DialogButtonStyle}"
                    Click="SecondaryButton_Click"
                    Margin="0,0,10,0"/>
            
            <Button x:Name="TertiaryButton"
                    Style="{StaticResource DialogButtonStyle}"
                    Click="TertiaryButton_Click"
                    IsCancel="True"
                    Visibility="Collapsed"
                    Margin="0,0,0,0"/>
        </StackPanel>
        </Grid>
    </Border>
</Window>
