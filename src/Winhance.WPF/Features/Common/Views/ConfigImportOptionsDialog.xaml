<Window x:Class="Winhance.WPF.Features.Common.Views.ConfigImportOptionsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Winhance.WPF.Features.Common.Views"
        xmlns:controls="clr-namespace:Winhance.WPF.Features.Common.Controls"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Import Configuration"
        Height="450"
        Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="{DynamicResource WindowBackground}"
        Foreground="{DynamicResource PrimaryTextColor}"
        Topmost="True"
        WindowStyle="None"
        BorderThickness="0"
        AllowsTransparency="True">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        
        <!-- Style for option buttons with hover effect -->
        <Style x:Key="OptionButtonStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="{DynamicResource ButtonBorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Background" Value="{DynamicResource ContentSectionBorderBrush}" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Cursor" Value="Hand" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource MainContainerBorderBrush}" />
                    <Setter Property="BorderBrush" Value="{DynamicResource AccentColor}" />
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Cancel button style with red hover effect -->
        <Style x:Key="CancelButtonStyle" TargetType="Button" BasedOn="{StaticResource DialogButtonStyle}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="Red" />
                                <Setter TargetName="border" Property="BorderBrush" Value="Red" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="DarkRed" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <!-- Main Content -->
    <Border BorderThickness="1"
            BorderBrush="{DynamicResource ButtonBorderBrush}"
            CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Custom Title Bar -->
            <Border Grid.Row="0"
                    Background="{DynamicResource ContentSectionBorderBrush}"
                    BorderBrush="{DynamicResource ButtonBorderBrush}"
                    BorderThickness="0,0,0,1"
                    CornerRadius="8,8,0,0"
                    MouseLeftButtonDown="Border_MouseLeftButtonDown">
                <Grid Height="32">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="Import Configuration"
                               VerticalAlignment="Center"
                               Margin="15,0,0,0"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryTextColor}"/>
                    
                    <Button Grid.Column="1"
                            Style="{StaticResource WindowCloseButton}"
                            Click="CloseButton_Click"
                            Margin="0,0,5,0"
                            VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Close"
                                                     Width="18"
                                                     Height="18"/>
                    </Button>
                </Grid>
            </Border>
            
            <!-- Dialog Content -->
            <Grid Grid.Row="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
        
                <!-- Header -->
                <DockPanel Grid.Row="0" Margin="0,0,0,15" Style="{StaticResource DialogHeaderStyle}">
                    <materialDesign:PackIcon Kind="FileImport"
                                            Width="32"
                                            Height="32"
                                            Margin="0,0,10,0"
                                            VerticalAlignment="Top"
                                            Foreground="{DynamicResource PrimaryTextColor}"
                                            DockPanel.Dock="Left"/>
                    <StackPanel>
                        <TextBlock Text="Select an option to start the configuration import process."
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,8"
                                   Foreground="{DynamicResource PrimaryTextColor}"/>
                    </StackPanel>
                </DockPanel>
        
                <!-- Options -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Import My Own Config Option -->
                    <Border Grid.Column="0" 
                            Margin="10,0,10,0"
                            Style="{StaticResource OptionButtonStyle}"
                            MouseLeftButtonDown="ImportOwnConfig_Click">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <materialDesign:PackIcon Kind="FolderOpen"
                                                   Grid.Row="0"
                                                   Width="125"
                                                   Height="125"
                                                   Margin="0,20,0,5"
                                                   HorizontalAlignment="Center"
                                                   Foreground="{DynamicResource PrimaryTextColor}"/>
                            
                            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="Import my own config"
                                           FontWeight="SemiBold"
                                           FontSize="18"
                                           TextAlignment="Center"
                                           Foreground="{DynamicResource PrimaryTextColor}"/>
                                <TextBlock Text="Select a configuration file from your computer"
                                           FontSize="14"
                                           Margin="0,8,0,0"
                                           TextWrapping="Wrap"
                                           TextAlignment="Center"
                                           Foreground="{DynamicResource SecondaryTextColor}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Import Recommended Config Option -->
                    <Border Grid.Column="1" 
                            Margin="10,0,10,0"
                            Style="{StaticResource OptionButtonStyle}"
                            MouseLeftButtonDown="ImportRecommendedConfig_Click">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <materialDesign:PackIcon Kind="CloudDownload"
                                                   Grid.Row="0"
                                                   Width="125"
                                                   Height="125"
                                                   Margin="0,20,0,5"
                                                   HorizontalAlignment="Center"
                                                   Foreground="{DynamicResource PrimaryTextColor}"/>
                            
                            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="Import recommended config"
                                           FontWeight="SemiBold"
                                           FontSize="18"
                                           TextAlignment="Center"
                                           Foreground="{DynamicResource PrimaryTextColor}"/>
                                <TextBlock Text="Download and import the recommended configuration"
                                           FontSize="14"
                                           Margin="0,8,0,0"
                                           TextWrapping="Wrap"
                                           TextAlignment="Center"
                                           Foreground="{DynamicResource SecondaryTextColor}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
        
                <!-- Buttons -->
                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,15,0,0">
                    <Button Content="Cancel"
                            Style="{StaticResource CancelButtonStyle}"
                            Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
