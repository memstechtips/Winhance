<Window x:Class="Winhance.WPF.Features.Common.Views.DonationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:Winhance.WPF.Features.Common.Converters"
        xmlns:loc="clr-namespace:Winhance.WPF.Features.Common.Extensions"
        x:Name="DialogWindow"
        Title="{Binding Title}"
        Width="750"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="True"
        Topmost="True">
    
    <Window.Resources>
        <converters:GreaterThanOneConverter x:Key="GreaterThanOneConverter"/>
    </Window.Resources>
    
    <Grid>
        <Grid.OpacityMask>
            <VisualBrush>
                <VisualBrush.Visual>
                    <Border Background="Black"
                            CornerRadius="10"
                            Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Grid}}"
                            Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Grid}}"/>
                </VisualBrush.Visual>
            </VisualBrush>
        </Grid.OpacityMask>

        <Border CornerRadius="10"
                BorderBrush="Transparent"
                Background="{DynamicResource WindowBackground}"
                KeyboardNavigation.TabNavigation="Cycle">
            <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/> <!-- Added row for checkbox -->
            </Grid.RowDefinitions>

        <!-- Header with Icon -->
        <DockPanel Grid.Row="0" LastChildFill="True" Style="{StaticResource DialogHeaderStyle}">
            <!-- Heart icon for donation dialog -->
            <Image x:Name="DialogIcon"
                  Style="{StaticResource DialogIconStyle}"
                  DockPanel.Dock="Left">
                <Image.Source>
                    <DrawingImage>
                        <DrawingImage.Drawing>
                            <DrawingGroup>
                                <GeometryDrawing Brush="#FFE81123">
                                    <GeometryDrawing.Geometry>
                                        <PathGeometry Figures="M12,21.35L10.55,20.03C5.4,15.36 2,12.27 2,8.5C2,5.41 4.42,3 7.5,3C9.24,3 10.91,3.81 12,5.08C13.09,3.81 14.76,3 16.5,3C19.58,3 22,5.41 22,8.5C22,12.27 18.6,15.36 13.45,20.03L12,21.35Z"/>
                                    </GeometryDrawing.Geometry>
                                </GeometryDrawing>
                            </DrawingGroup>
                        </DrawingImage.Drawing>
                    </DrawingImage>
                </Image.Source>
            </Image>
            <TextBlock x:Name="HeaderText"
                      Style="{StaticResource DialogTextBlockStyle}"
                      FontWeight="SemiBold"
                      FontSize="16"
                      TextWrapping="Wrap"
                      VerticalAlignment="Center">
                <Run Text="{loc:Localize Dialog_Donation_Header_Title}"/>
                <LineBreak/>
                <LineBreak/>
                <Run Text="{loc:Localize Dialog_Donation_Header_Message}"/>
            </TextBlock>
        </DockPanel>

        <!-- Support Message -->
        <TextBlock x:Name="SupportMessageText"
                  Grid.Row="1"
                  Margin="42,10,42,10"
                  Style="{StaticResource DialogTextBlockStyle}"
                  FontWeight="SemiBold"
                  TextWrapping="Wrap"
                  FontSize="16"
                  Text="{loc:Localize Dialog_Donation_SupportMessage}"/>

        <!-- Footer Text -->
        <TextBlock x:Name="FooterText"
                  Grid.Row="2"
                  Style="{StaticResource DialogFooterStyle}"
                  TextWrapping="Wrap"
                  Text="{loc:Localize Dialog_Donation_Footer}"
                  Margin="42,10,0,15"/>

        <!-- Don't show again checkbox with CustomCheckBox style -->
        <CheckBox x:Name="DontShowAgainCheckBox"
                 Grid.Row="3"
                 Content="{loc:Localize Dialog_Donation_Checkbox}"
                 Margin="42,0,0,15"
                 VerticalAlignment="Center"
                 Style="{StaticResource CustomCheckBox}"/>

        <!-- Buttons -->
        <StackPanel x:Name="ButtonsPanel"
                    Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button x:Name="PrimaryButton"
                    Style="{StaticResource DialogButtonStyle}"
                    Click="PrimaryButton_Click"
                    IsDefault="True"
                    Content="{loc:Localize Dialog_Button_Yes}"
                    Margin="0,0,10,0"/>
            
            <Button x:Name="SecondaryButton"
                    Style="{StaticResource DialogButtonStyle}"
                    Click="SecondaryButton_Click"
                    Content="{loc:Localize Dialog_Button_No}"
                    Margin="0,0,10,0"/>
            
            <Button x:Name="TertiaryButton"
                    Style="{StaticResource DialogButtonStyle}"
                    Click="TertiaryButton_Click"
                    IsCancel="True"
                    Visibility="Collapsed"
                    Margin="0,0,0,0"/>
        </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>