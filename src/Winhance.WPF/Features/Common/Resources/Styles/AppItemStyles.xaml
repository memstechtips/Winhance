<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    
    <!-- Section Header Style -->
    <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}"/>
        <Setter Property="Margin" Value="10,15,0,5"/>
    </Style>

    <!-- Section Separator Style -->
    <Style x:Key="SectionSeparatorStyle" TargetType="Separator">
        <Setter Property="Margin" Value="0,15,0,5"/>
        <Setter Property="Background" Value="{DynamicResource SecondaryTextColor}"/>
        <Setter Property="Opacity" Value="0.3"/>
    </Style>

    <!-- App Item Status Indicator Style -->
    <Style x:Key="AppStatusIndicatorStyle" TargetType="Ellipse">
        <Setter Property="Width" Value="10"/>
        <Setter Property="Height" Value="10"/>
        <Setter Property="Margin" Value="0,0,3,0"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect ShadowDepth="1"
                                Direction="315"
                                Color="Black"
                                Opacity="0.6"
                                BlurRadius="3"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- App Item Text Style -->
    <Style x:Key="AppItemTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Margin" Value="0,0,0,0"/>
    </Style>

    <!-- App Uniform Grid Layout -->
    <Style x:Key="AppItemsUniformGridStyle" TargetType="UniformGrid">
        <Setter Property="Columns" Value="4"/>
    </Style>

    <!-- App Button Style -->
    <Style x:Key="AppActionButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
        <Setter Property="Width" Value="80"/>
        <Setter Property="Height" Value="30"/>
    </Style>

    <!-- Info Text Style -->
    <Style x:Key="ItemDefinitionTextStyle" TargetType="TextBlock">
        <Setter Property="FontStyle" Value="Italic"/>
        <Setter Property="Foreground" Value="Gray"/>
        <Setter Property="Margin" Value="5,5,0,0"/>
    </Style>
    
    <!-- Reinstallability Indicator Style -->
    <Style x:Key="ReinstallabilityIndicatorStyle" TargetType="materialDesign:PackIcon">
        <Setter Property="Margin" Value="0,0,2,0"/>
        <Setter Property="Width" Value="16"/>
        <Setter Property="Height" Value="16"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
</ResourceDictionary>