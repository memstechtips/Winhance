<UserControl x:Class="Winhance.WPF.Features.Common.Controls.MoreMenuFlyout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:Winhance.WPF.Features.Common.ViewModels"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:loc="clr-namespace:Winhance.WPF.Features.Common.Extensions"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=viewModels:MoreMenuViewModel}">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Features/Common/Resources/Styles/MenuStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Custom Menu Button Style for proper left alignment -->
            <Style x:Key="MenuButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="Cursor" Value="Hand" />
                <Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}" />
                <Setter Property="HorizontalAlignment" Value="Stretch" />
                <Setter Property="HorizontalContentAlignment" Value="Left" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4">
                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  VerticalAlignment="Center"
                                                  Margin="{TemplateBinding Padding}" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{DynamicResource ButtonBorderBrush}" />
                                    <Setter Property="Foreground" Value="{DynamicResource ButtonHoverTextColor}" />
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{DynamicResource ButtonBorderBrush}" />
                                    <Setter TargetName="border" Property="Opacity" Value="0.8" />
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.6" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <!-- Flyout Menu Content -->
    <Border Background="{DynamicResource WindowBackground}"
            BorderBrush="#505050"
            BorderThickness="1"
            CornerRadius="4"
            Padding="8"
            MinWidth="200"
            MaxWidth="300"
            Effect="{StaticResource LightShadowEffect}">
        <StackPanel>
            <!-- Version Info (non-clickable) -->
            <Button IsEnabled="False"
                    Style="{StaticResource MenuButtonStyle}"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Padding="8,8"
                    Height="40"
                    Margin="0,1">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial Kind="Information" Width="14" Height="14" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <TextBlock Text="{Binding VersionInfo}" Style="{DynamicResource VersionInfoTextStyle}"/>
                </StackPanel>
            </Button>

            <!-- Separator -->
            <Separator Style="{DynamicResource WinhanceSeparatorStyle}" Margin="0,4,0,4"/>

            <!-- Language Selector -->
            <TextBlock Text="{loc:Localize Menu_Language}"
                       FontSize="12"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource PrimaryTextColor}"
                       Margin="8,4,8,2"
                       Opacity="0.7"/>
            <Button Command="{Binding ChangeLanguageCommand}"
                    CommandParameter="en"
                    Style="{StaticResource MenuButtonStyle}"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Padding="8,6"
                    Height="36"
                    Margin="0,1">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial Kind="Translate" Width="12" Height="12" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="{loc:Localize Language_English}" VerticalAlignment="Center" FontSize="13"/>
                </StackPanel>
            </Button>
            <Button Command="{Binding ChangeLanguageCommand}"
                    CommandParameter="es"
                    Style="{StaticResource MenuButtonStyle}"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Padding="8,6"
                    Height="36"
                    Margin="0,1">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial Kind="Translate" Width="12" Height="12" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="{loc:Localize Language_Spanish}" VerticalAlignment="Center" FontSize="13"/>
                </StackPanel>
            </Button>

            <!-- Check for Updates -->
            <Button Command="{Binding CheckForUpdatesCommand}"
                    Style="{StaticResource MenuButtonStyle}"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Padding="8,8"
                    Height="40"
                    Margin="0,1">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial Kind="Download" Width="14" Height="14" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <TextBlock Text="{loc:Localize Menu_CheckForUpdates}" VerticalAlignment="Center" FontSize="14"/>
                </StackPanel>
            </Button>

            <!-- Separator -->
            <Separator Style="{DynamicResource WinhanceSeparatorStyle}" Margin="0,4,0,4"/>

            <!-- Winhance Logs -->
            <Button Command="{Binding OpenLogsCommand}"
                    Style="{StaticResource MenuButtonStyle}"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Padding="8,8"
                    Height="40"
                    Margin="0,1">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial Kind="FolderOpen" Width="14" Height="14" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <TextBlock Text="{loc:Localize Menu_WinhanceLogs}" VerticalAlignment="Center" FontSize="14"/>
                </StackPanel>
            </Button>

            <!-- Winhance Scripts -->
            <Button Command="{Binding OpenScriptsCommand}"
                    Style="{StaticResource MenuButtonStyle}"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Padding="8,8"
                    Height="40"
                    Margin="0,1">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial Kind="Script" Width="14" Height="14" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <TextBlock Text="{loc:Localize Menu_WinhanceScripts}" VerticalAlignment="Center" FontSize="14"/>
                </StackPanel>
            </Button>

            <!-- Separator -->
            <Separator Style="{DynamicResource WinhanceSeparatorStyle}" Margin="0,4,0,4"/>

            <!-- Close Winhance -->
            <Button Command="{Binding CloseApplicationCommand}"
                    Style="{StaticResource MenuButtonStyle}"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Padding="8,8"
                    Height="40"
                    Margin="0,1">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial Kind="Close" Width="12" Height="12" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <TextBlock Text="{loc:Localize Menu_CloseWinhance}" VerticalAlignment="Center" FontSize="14"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Border>
</UserControl>
