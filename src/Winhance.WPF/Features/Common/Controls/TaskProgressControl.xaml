<UserControl x:Class="Winhance.WPF.Features.Common.Controls.TaskProgressControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:loc="clr-namespace:Winhance.WPF.Features.Common.Extensions"
             mc:Ignorable="d"
             d:DesignHeight="60"
        d:DesignWidth="400">
    <Grid x:Name="MainGrid"
            Visibility="{Binding IsVisible, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanToVisibilityConverter}}">
        <Border Background="{DynamicResource ContentSectionBorderBrush}"
                BorderBrush="Transparent"
                CornerRadius="5"
                Padding="10,5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Row 0: Horizontal layout: App Name | Last Terminal Line | Cancel Button -->
                <Grid Grid.Row="0"
                        Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <!-- App name -->
                        <ColumnDefinition Width="*"/>
                        <!-- Last terminal line -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Cancel button -->
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="{Binding AppName, RelativeSource={RelativeSource AncestorType=UserControl}}"
                               FontSize="14"
                               FontWeight="Bold"
                               Foreground="{DynamicResource PrimaryTextColor}"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"
                               AutomationProperties.LiveSetting="Assertive"/>

                    <Border Grid.Column="1"
                            Background="{DynamicResource MainContainerBorderBrush}"
                            CornerRadius="3"
                            Height="30"
                            Margin="0,0,10,0">
                        <TextBlock Text="{Binding LastTerminalLine, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                   FontFamily="Consolas, 'Courier New', monospace"
                                   Foreground="{DynamicResource PrimaryTextColor}"
                                   VerticalAlignment="Center"
                                   TextTrimming="CharacterEllipsis"
                                   Margin="5,0"
                                   AutomationProperties.LiveSetting="Polite"/>
                    </Border>

                    <Button Grid.Column="2"
                            Style="{StaticResource CancelButtonStyle}"
                            Command="{Binding CancelCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            IsEnabled="{Binding IsTaskRunning, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            VerticalAlignment="Center"
                            AutomationProperties.Name="{loc:Localize Accessibility_CancelTask}"
                            Visibility="{Binding CanCancel, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </Grid>

                <!-- Row 1: Simple thin indeterminate progress bar -->
                <ProgressBar Grid.Row="1"
                             Style="{StaticResource StandardProgressBar}"
                             Height="3"
                             BorderThickness="0"
                             IsIndeterminate="True"
                             AutomationProperties.Name="{loc:Localize Accessibility_TaskProgress}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
