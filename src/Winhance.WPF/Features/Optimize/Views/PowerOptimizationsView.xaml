<UserControl x:Class="Winhance.WPF.Features.Optimize.Views.PowerOptimizationsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Winhance.WPF.Features.Optimize.Views"
    xmlns:viewModels="clr-namespace:Winhance.WPF.Features.Optimize.ViewModels"
    xmlns:powerConverters="clr-namespace:Winhance.WPF.Features.Optimize.Converters"
    xmlns:controls="clr-namespace:Winhance.WPF.Features.Common.Controls"
    xmlns:behaviors="clr-namespace:Winhance.WPF.Features.Common.Behaviors"
    xmlns:converters="clr-namespace:Winhance.WPF.Features.Common.Converters"
    xmlns:models="clr-namespace:Winhance.Core.Features.Optimize.Models;assembly=Winhance.Core"
    xmlns:enums="clr-namespace:Winhance.Core.Features.Common.Enums;assembly=Winhance.Core"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800" d:DataContext="{d:DesignInstance Type=viewModels:PowerOptimizationsViewModel}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" />
        <converters:BoolToExpandCollapseConverter x:Key="BoolToExpandCollapseConverter" />
        <converters:BooleanToRotationConverter x:Key="BooleanToRotationConverter" />

        <!-- Converters for control types -->
        <powerConverters:ComboBoxTypeToVisibilityConverter x:Key="ComboBoxTypeToVisibilityConverter" />
        <powerConverters:NumericUpDownTypeToVisibilityConverter x:Key="NumericUpDownTypeToVisibilityConverter" />
        <powerConverters:BinaryToggleTypeToVisibilityConverter x:Key="BinaryToggleTypeToVisibilityConverter" />
        <powerConverters:AdvancedSettingVisibilityConverter x:Key="AdvancedSettingVisibilityConverter" />
    </UserControl.Resources>

    <StackPanel>
        <!-- Collapsible Header -->
        <Border x:Name="HeaderBorder"
                Background="{DynamicResource ContentSectionBorderBrush}"
                CornerRadius="5"
                Margin="0,5,0,5"
                Effect="{StaticResource ShadowEffect}"
                Cursor="Hand"
                ClipToBounds="False"
                Panel.ZIndex="100">
            <Border.InputBindings>
                <MouseBinding MouseAction="LeftClick" Command="{Binding ToggleExpandCommand}"/>
            </Border.InputBindings>
            <Grid x:Name="Header" Height="40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Left content -->
                <StackPanel Orientation="Horizontal" 
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Grid.Column="0">
                    <!-- Category Icon -->
                    <TextBlock Text="&#xE63C;"
                               FontFamily="{StaticResource MaterialSymbolsFont}"
                               FontSize="24"
                               Margin="15,6,5,6"
                               Foreground="{DynamicResource PrimaryTextColor}"
                               VerticalAlignment="Center"/>
                    <!-- Category Name -->
                    <TextBlock Text="{Binding DisplayName}"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Margin="5,6,0,6"
                               Foreground="{DynamicResource PrimaryTextColor}"
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Chevron - positioned in right column with fixed alignment -->
                <materialDesign:PackIcon x:Name="HeaderIcon"
                                         Kind="ChevronDown"
                                         Width="24"
                                         Height="24"
                                         VerticalAlignment="Center"
                                         HorizontalAlignment="Right"
                                         Foreground="{DynamicResource PrimaryTextColor}"
                                         Margin="0,0,15,0"
                                         Grid.Column="1"
                                         RenderTransformOrigin="0.5,0.5">
                    <materialDesign:PackIcon.RenderTransform>
                        <RotateTransform Angle="{Binding IsExpanded, Converter={StaticResource BooleanToRotationConverter}}"/>
                    </materialDesign:PackIcon.RenderTransform>
                </materialDesign:PackIcon>
            </Grid>
        </Border>
        
        <!-- Content Section -->
        <Border Background="{DynamicResource ContentSectionBorderBrush}"
                CornerRadius="5"
                Margin="0,0,0,5"
                Effect="{StaticResource LightShadowEffect}"
                Visibility="{Binding IsExpanded, Converter={StaticResource BooleanToVisibilityConverter}}">
        <StackPanel Margin="0,10,0,10">
            <!-- Primary Power Settings Section -->
            <Grid Margin="10,0,10,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Power Plan Setting -->
                <Grid Grid.Row="0" Margin="25,0,25,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Setting Name and Description -->
                    <StackPanel>
                        <TextBlock Text="Power Plan" 
                                   Foreground="{DynamicResource PrimaryTextColor}" 
                                   FontWeight="SemiBold" 
                                   FontSize="14"/>
                        <TextBlock Text="Select a power plan for your system" 
                                   Foreground="{DynamicResource SecondaryTextColor}" 
                                   TextWrapping="Wrap" 
                                   Margin="0,2,0,0"/>
                    </StackPanel>

                    <!-- Power Plan ComboBox -->
                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <ComboBox ItemsSource="{Binding PowerPlans}" 
                                  DisplayMemberPath="Name"
                                  SelectedItem="{Binding SelectedPowerPlan, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                  Width="200" 
                                  HorizontalAlignment="Right" 
                                  VerticalAlignment="Center"
                                  behaviors:ComboBoxDropdownBehavior.StayWithParent="True"/>
                        <!-- Auto-apply on selection change, no need for Enter key -->
                        
                        <!-- Loading Spinner -->
                        <ProgressBar HorizontalAlignment="Center" Margin="0,5,0,0" IsIndeterminate="True" Width="20" Height="20" 
                                     Visibility="{Binding IsApplyingPowerPlan, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </StackPanel>
                </Grid>

                <!-- Turn off the display Setting -->
                <Grid Grid.Row="1" Margin="25,0,25,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Setting Name and Description -->
                    <StackPanel>
                        <TextBlock Text="Turn off the display" 
                                   Foreground="{DynamicResource PrimaryTextColor}" 
                                   FontWeight="SemiBold" 
                                   FontSize="14"/>
                        <TextBlock Text="Specifies the period of inactivity before Windows turns off the display" 
                                   Foreground="{DynamicResource SecondaryTextColor}" 
                                   TextWrapping="Wrap" 
                                   Margin="0,2,0,0"/>
                    </StackPanel>

                    <!-- Display Timeout ComboBox -->
                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <ComboBox Width="200" 
                                  HorizontalAlignment="Right" 
                                  VerticalAlignment="Center"
                                  ItemsSource="{Binding TimeoutOptions}"
                                  SelectedIndex="{Binding SelectedDisplayTimeoutIndex, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  behaviors:ComboBoxDropdownBehavior.StayWithParent="True"/>
                        <!-- Auto-apply on selection change -->
                    </StackPanel>
                </Grid>

                <!-- Put the computer to sleep Setting -->
                <Grid Grid.Row="2" Margin="25,0,25,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Setting Name and Description -->
                    <StackPanel>
                        <TextBlock Text="Put the computer to sleep" 
                                   Foreground="{DynamicResource PrimaryTextColor}" 
                                   FontWeight="SemiBold" 
                                   FontSize="14"/>
                        <TextBlock Text="Specifies the period of inactivity before Windows puts the computer to sleep" 
                                   Foreground="{DynamicResource SecondaryTextColor}" 
                                   TextWrapping="Wrap" 
                                   Margin="0,2,0,0"/>
                    </StackPanel>

                    <!-- Sleep Timeout ComboBox -->
                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <ComboBox Width="200" 
                                  HorizontalAlignment="Right" 
                                  VerticalAlignment="Center"
                                  ItemsSource="{Binding TimeoutOptions}"
                                  SelectedIndex="{Binding SelectedSleepTimeoutIndex, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  behaviors:ComboBoxDropdownBehavior.StayWithParent="True"/>
                        <!-- Auto-apply on selection change -->
                    </StackPanel>
                </Grid>
            </Grid> 

            <!-- Advanced Power Settings Section -->
            <Grid Margin="10,0,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Advanced Power Settings Title -->
                <TextBlock Text="Advanced Power Settings" 
                           FontSize="16" 
                           Foreground="{DynamicResource PrimaryTextColor}" 
                           FontWeight="SemiBold" 
                           Margin="25,10,0,10" 
                           VerticalAlignment="Center"/>

                <!-- Advanced Power Settings Content - Dynamic settings from PowerService -->
                <StackPanel Grid.Row="1" Margin="0,0,0,0">
                    
                    <!-- Loading Indicator -->
                    <Grid Visibility="{Binding IsLoadingAdvancedSettings, Converter={StaticResource BoolToVisibilityConverter}}" Margin="25,10,25,10">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <ProgressBar IsIndeterminate="True" Width="100" Height="10" Margin="0,0,0,10"/>
                            <TextBlock Text="Loading advanced power settings..." 
                                       Foreground="{DynamicResource SecondaryTextColor}" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>

                    <!-- Dynamic Power Settings - All available settings from powercfg -->
                    <ItemsControl ItemsSource="{Binding Settings}" 
                                  Visibility="{Binding IsLoadingAdvancedSettings, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <!-- Skip the main power settings that are already shown above -->
                                <Grid Margin="25,0,25,10" 
                                      Visibility="{Binding Path=., Converter={StaticResource AdvancedSettingVisibilityConverter}}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Setting Name and Description - Consistent with primary settings -->
                                    <StackPanel>
                                        <TextBlock Text="{Binding DisplayName}" 
                                                   Foreground="{DynamicResource PrimaryTextColor}" 
                                                   FontWeight="SemiBold" 
                                                   FontSize="14"/>
                                        <TextBlock Text="{Binding Description}" 
                                                   Foreground="{DynamicResource SecondaryTextColor}" 
                                                   TextWrapping="Wrap" 
                                                   Margin="0,2,0,0"/>
                                    </StackPanel>

                                    <!-- Dynamic Control based on ControlType -->
                                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                        
                                        <!-- ComboBox for dropdown settings -->
                                        <ComboBox Width="200" 
                                                  HorizontalAlignment="Right" 
                                                  VerticalAlignment="Center"
                                                  ItemsSource="{Binding Options}"
                                                  DisplayMemberPath="Name"
                                                  SelectedItem="{Binding SelectedOption, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                  Visibility="{Binding ControlType, Converter={StaticResource ComboBoxTypeToVisibilityConverter}}"
                                                  behaviors:ComboBoxDropdownBehavior.StayWithParent="True"/>
                                        
                                        <!-- NumericUpDown for numeric settings -->
                                        <controls:NumericUpDown Width="200" 
                                                                HorizontalAlignment="Right" 
                                                                VerticalAlignment="Center"
                                                                Minimum="{Binding MinValue}" 
                                                                Maximum="{Binding MaxValue}" 
                                                                Value="{Binding SelectedValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                                Increment="1" 
                                                                Units="{Binding Units}"
                                                                Visibility="{Binding ControlType, Converter={StaticResource NumericUpDownTypeToVisibilityConverter}}"/>
                                        
                                        <!-- Toggle for boolean settings -->
                                        <ToggleButton Style="{StaticResource MaterialToggleSwitch}" 
                                                      IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                      HorizontalAlignment="Right"
                                                      VerticalAlignment="Center"
                                                      Visibility="{Binding ControlType, Converter={StaticResource BinaryToggleTypeToVisibilityConverter}}"/>
                                        
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                </StackPanel>
            </Grid>

            <!-- Container for Setting Labels & Toggles - REMOVED to eliminate duplicate power settings -->
            <!-- This section was showing binary toggles that duplicated the advanced power settings above -->
            <!-- The advanced power settings with proper controls (ComboBox, NumericUpDown) are shown above -->
