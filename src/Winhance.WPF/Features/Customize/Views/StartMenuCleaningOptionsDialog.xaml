<Window x:Class="Winhance.WPF.Features.Customize.Views.StartMenuCleaningOptionsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Start Menu Cleaning Options"
        Width="600"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="True"
        Topmost="True">
    
    <Border CornerRadius="10"
            BorderThickness="1"
            BorderBrush="{DynamicResource ButtonBorderBrush}"
            Background="{DynamicResource WindowBackground}"
            Effect="{StaticResource ShadowEffect}">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header with Icon -->
            <DockPanel Grid.Row="0" LastChildFill="True" Style="{StaticResource DialogHeaderStyle}">
                <Image x:Name="DialogIcon"
                       Style="{StaticResource DialogIconStyle}"
                       DockPanel.Dock="Left"
                       Source="{StaticResource QuestionIcon}"/>
                <TextBlock x:Name="HeaderText"
                          Style="{StaticResource DialogTextBlockStyle}"
                          FontWeight="SemiBold"
                          FontSize="16"
                          Text="Start Menu Cleaning Options"
                          TextWrapping="Wrap"
                          VerticalAlignment="Center"/>
            </DockPanel>

            <!-- Message Content -->
            <TextBlock x:Name="MessageContent"
                      Grid.Row="1"
                      Style="{StaticResource DialogTextBlockStyle}"
                      TextWrapping="Wrap"
                      Margin="42,10,0,10"
                      Text="You are about to clean the Start Menu for all users on this computer.&#x0a;&#x0a;This will remove all pinned items and apply recommended settings to disable suggestions, recommendations, and tracking features."/>

            <!-- Footer Text -->
            <TextBlock x:Name="FooterText"
                      Grid.Row="3"
                      Style="{StaticResource DialogFooterStyle}"
                      TextWrapping="Wrap"
                      Margin="42,10,0,15"
                      Text="Do you want to continue?"/>

            <!-- Buttons -->
            <StackPanel x:Name="ButtonsPanel"
                        Grid.Row="4"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button x:Name="ContinueButton"
                        Style="{StaticResource DialogButtonStyle}"
                        Content="Continue"
                        Click="ContinueButton_Click"
                        IsDefault="True"
                        Margin="0,0,10,0"/>
                
                <Button x:Name="CancelButton"
                        Style="{StaticResource DialogButtonStyle}"
                        Content="Cancel"
                        Click="CancelButton_Click"
                        IsCancel="True"
                        Margin="0,0,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
