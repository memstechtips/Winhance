<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="Winhance.UI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Winhance.UI">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- WinUI 3 native controls resources -->
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Legacy theme colors for Winhance custom themes -->
                <ResourceDictionary Source="ms-appx:///Features/Common/Resources/LegacyThemes.xaml" />
                <!-- Value converters -->
                <ResourceDictionary Source="ms-appx:///Features/Common/Resources/Converters.xaml" />
                <!-- Shared setting templates and styles -->
                <ResourceDictionary Source="ms-appx:///Features/Common/Resources/SettingTemplates.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!-- Other app resources here -->
        </ResourceDictionary>
    </Application.Resources>
</Application>
