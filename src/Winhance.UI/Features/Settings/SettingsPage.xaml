<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Winhance.UI.Features.Settings.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Winhance.UI.Features.Settings"
    xmlns:viewModels="using:Winhance.UI.Features.Settings.ViewModels"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls">

    <ScrollViewer Padding="40,24,40,24" VerticalScrollBarVisibility="Auto">
        <StackPanel Spacing="4" MaxWidth="1000" HorizontalAlignment="Center">

            <!-- Page Header -->
            <TextBlock
                Text="Settings"
                Style="{StaticResource TitleTextBlockStyle}"
                Margin="0,0,0,24"/>

            <!-- General Settings Group -->
            <TextBlock
                Text="General"
                Style="{StaticResource BodyStrongTextBlockStyle}"
                Margin="0,0,0,8"/>

            <!-- Language Setting -->
            <controls:SettingsCard
                Header="Language"
                Description="Select your preferred language">
                <controls:SettingsCard.HeaderIcon>
                    <FontIcon Glyph="&#xF2B7;" FontFamily="Segoe MDL2 Assets"/>
                </controls:SettingsCard.HeaderIcon>
                <ComboBox
                    x:Name="LanguageComboBox"
                    MinWidth="200"
                    ItemsSource="{x:Bind ViewModel.Languages, Mode=OneWay}"
                    SelectedValue="{x:Bind ViewModel.SelectedLanguage, Mode=TwoWay}"
                    DisplayMemberPath="DisplayText"
                    SelectedValuePath="Value"/>
            </controls:SettingsCard>

            <!-- Theme Setting -->
            <controls:SettingsCard
                Header="Theme"
                Description="Choose your preferred theme">
                <controls:SettingsCard.HeaderIcon>
                    <FontIcon Glyph="&#xE790;" FontFamily="Segoe MDL2 Assets"/>
                </controls:SettingsCard.HeaderIcon>
                <ComboBox
                    x:Name="ThemeComboBox"
                    MinWidth="200"
                    ItemsSource="{x:Bind ViewModel.Themes, Mode=OneWay}"
                    SelectedItem="{x:Bind ViewModel.SelectedThemeOption, Mode=TwoWay}"
                    DisplayMemberPath="DisplayText"/>
            </controls:SettingsCard>

            <!-- Configuration Group -->
            <TextBlock
                Text="Configuration"
                Style="{StaticResource BodyStrongTextBlockStyle}"
                Margin="0,24,0,8"/>

            <!-- Import/Export Configuration -->
            <controls:SettingsCard
                Header="Backup &amp; Restore"
                Description="Import or export your settings configuration">
                <controls:SettingsCard.HeaderIcon>
                    <FontIcon Glyph="&#xE8F1;" FontFamily="Segoe MDL2 Assets"/>
                </controls:SettingsCard.HeaderIcon>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Button
                        Content="Import"
                        Command="{x:Bind ViewModel.ImportConfigCommand}">
                        <Button.KeyboardAccelerators>
                            <KeyboardAccelerator Key="I" Modifiers="Control"/>
                        </Button.KeyboardAccelerators>
                    </Button>
                    <Button
                        Content="Export"
                        Command="{x:Bind ViewModel.ExportConfigCommand}">
                        <Button.KeyboardAccelerators>
                            <KeyboardAccelerator Key="E" Modifiers="Control"/>
                        </Button.KeyboardAccelerators>
                    </Button>
                </StackPanel>
            </controls:SettingsCard>

        </StackPanel>
    </ScrollViewer>
</Page>
