<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Winhance.UI.Features.Common.Controls.PowerPlanComboBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Winhance.UI.Features.Common.Controls"
    xmlns:interfaces="using:Winhance.Core.Features.Common.Interfaces">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///Features/Common/Resources/FeatureIcons.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <ComboBox
        x:Name="PowerPlanSelector"
        MinWidth="220"
        MaxDropDownHeight="300"
        ItemsSource="{x:Bind ItemsSource, Mode=OneWay}"
        SelectedValue="{x:Bind SelectedValue, Mode=OneWay}"
        SelectedValuePath="Value"
        DropDownClosed="OnDropDownClosed"
        DropDownOpened="OnDropDownOpened">

        <ComboBox.ItemTemplate>
            <DataTemplate x:DataType="interfaces:ComboBoxOption">
                <Grid HorizontalAlignment="Stretch" Tag="{x:Bind}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Status Indicator (Green = exists, Red = not exists) -->
                    <Ellipse
                        x:Name="StatusIndicator"
                        Grid.Column="0"
                        Width="8"
                        Height="8"
                        Margin="0,0,8,0"
                        VerticalAlignment="Center"/>

                    <!-- Display Name with [Active] Badge -->
                    <StackPanel
                        Grid.Column="1"
                        Orientation="Horizontal"
                        VerticalAlignment="Center">
                        <TextBlock Text="{x:Bind DisplayText}" VerticalAlignment="Center"/>
                        <TextBlock
                            x:Name="ActiveBadge"
                            Text=""
                            FontSize="12"
                            FontWeight="SemiBold"
                            Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                            Margin="6,0,0,0"
                            VerticalAlignment="Center"
                            Visibility="Collapsed"/>
                    </StackPanel>

                    <!-- Delete Button - sized to fit within default ComboBoxItem height -->
                    <Button
                        x:Name="DeleteButton"
                        Grid.Column="2"
                        Width="20"
                        Height="20"
                        MinWidth="20"
                        MinHeight="20"
                        Padding="0"
                        Margin="4,0,0,0"
                        Background="Transparent"
                        BorderThickness="0"
                        VerticalAlignment="Center"
                        Visibility="Collapsed">
                        <Button.Resources>
                            <SolidColorBrush x:Key="ButtonBackgroundPointerOver">#C42B1C</SolidColorBrush>
                            <SolidColorBrush x:Key="ButtonBackgroundPressed">#B22A1C</SolidColorBrush>
                            <SolidColorBrush x:Key="ButtonForegroundPointerOver">White</SolidColorBrush>
                            <SolidColorBrush x:Key="ButtonForegroundPressed">White</SolidColorBrush>
                        </Button.Resources>
                        <ToolTipService.ToolTip>
                            <ToolTip x:Name="DeleteTooltip"/>
                        </ToolTipService.ToolTip>
                        <Viewbox Width="14" Height="14" Margin="-5,-2,0,0">
                            <PathIcon Data="{StaticResource DeleteForeverIconPath}" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                        </Viewbox>
                    </Button>
                </Grid>
            </DataTemplate>
        </ComboBox.ItemTemplate>
    </ComboBox>
</UserControl>
