<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Winhance.UI.Features.Common.Controls.NavButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Winhance.UI.Features.Common.Controls"
    IsTabStop="True"
    UseSystemFocusVisuals="True"
    AutomationProperties.Name="{x:Bind Text, Mode=OneWay}">

    <Grid x:Name="RootGrid"
          Width="{x:Bind ActualButtonWidth, Mode=OneWay}"
          Height="{x:Bind ActualButtonHeight, Mode=OneWay}"
          PointerEntered="RootGrid_PointerEntered"
          PointerExited="RootGrid_PointerExited"
          PointerPressed="RootGrid_PointerPressed"
          PointerReleased="RootGrid_PointerReleased">

        <!-- Main Button Background -->
        <Border x:Name="BackgroundBorder"
                Background="Transparent"
                CornerRadius="10"/>

        <!-- Content Stack -->
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="4">
            <!-- FontIcon - for Segoe MDL2/Fluent glyph icons -->
            <FontIcon x:Name="ButtonFontIcon"
                      Glyph="{x:Bind IconGlyph, Mode=OneWay}"
                      FontSize="{x:Bind IconSize, Mode=OneWay}"
                      HorizontalAlignment="Center"
                      Margin="{x:Bind IconMargin, Mode=OneWay}"
                      Visibility="{x:Bind FontIconVisibility, Mode=OneWay}"/>

            <!-- PathIcon - for Material Design / vector path icons (wrapped in Viewbox for scaling) -->
            <!-- Note: Data is set in code-behind via OnIconPropertyChanged because x:Bind doesn't support string-to-Geometry conversion -->
            <Viewbox Width="{x:Bind IconSize, Mode=OneWay}"
                     Height="{x:Bind IconSize, Mode=OneWay}"
                     Stretch="Uniform"
                     HorizontalAlignment="Center"
                     Margin="{x:Bind IconMargin, Mode=OneWay}"
                     Visibility="{x:Bind PathIconVisibility, Mode=OneWay}">
                <PathIcon x:Name="ButtonPathIcon"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
            </Viewbox>

            <!-- Text (Hidden when compact) -->
            <TextBlock x:Name="ButtonText"
                       Text="{x:Bind Text, Mode=OneWay}"
                       FontSize="10"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       MaxWidth="60"
                       HorizontalAlignment="Center"
                       Visibility="{x:Bind TextVisibility, Mode=OneWay}"/>
        </StackPanel>

        <!-- Left Selection Indicator -->
        <Border x:Name="SelectionIndicator"
                Width="3"
                Height="16"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                CornerRadius="2"
                Margin="0,0,0,0"
                Background="{ThemeResource AccentFillColorDefaultBrush}"
                Visibility="{x:Bind IndicatorVisibility, Mode=OneWay}"/>

        <!-- InfoBadge Overlay -->
        <InfoBadge x:Name="Badge"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   Margin="0,2,-4,0"
                   Visibility="{x:Bind BadgeVisibility, Mode=OneWay}"
                   Value="{x:Bind BadgeValue, Mode=OneWay}"/>

        <!-- Loading Overlay -->
        <Border x:Name="LoadingOverlay"
                Background="#80000000"
                CornerRadius="10"
                Visibility="{x:Bind LoadingVisibility, Mode=OneWay}">
            <ProgressRing IsActive="{x:Bind IsLoading, Mode=OneWay}"
                          Width="24"
                          Height="24"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>
